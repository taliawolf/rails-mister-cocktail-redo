<%= @cocktail.name %>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<%= link_to 'delete', cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure you want to delete this cocktail?" }, class: 'button' %>
<div>
  <h2 class="text-center mt-4">Add an ingredient</h2>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.input :ingredient_id, collection: Ingredient.all %>
    <%= f.button :submit, class: 'button' %>
  <% end %>
</div>
